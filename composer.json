{
    "name": "customkings/product-personalizer",
    "description": "WordPress plugin for product personalization",
    "type": "wordpress-plugin",
    "license": "GPL-2.0-or-later",
    "require-dev": {
        "phpunit/phpunit": "^9.6",
        "yoast/phpunit-polyfills": "^4.0",
        "squizlabs/php_codesniffer": "^3.7",
        "wp-coding-standards/wpcs": "^3.0",
        "phpcompatibility/phpcompatibility-wp": "^2.1",
        "dealerdirect/phpcodesniffer-composer-installer": "^1.0",
        "mockery/mockery": "^1.5",
        "johnpbloch/wordpress": "*"
    },
    "autoload": {
        "psr-4": {
            "CustomKings\\": "includes/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "CustomKings\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "test": "set WP_TESTS_DIR=C:/Users/ratte/AppData/Local/Temp/wordpress-tests-lib && phpunit",
        "test:unit": "set WP_TESTS_DIR=C:/Users/ratte/AppData/Local/Temp/wordpress-tests-lib && phpunit --testsuite Unit",
        "test:integration": "set WP_TESTS_DIR=C:/Users/ratte/AppData/Local/Temp/wordpress-tests-lib && phpunit --testsuite Integration",
        "test:coverage": "set WP_TESTS_DIR=C:/Users/ratte/AppData/Local/Temp/wordpress-tests-lib && phpunit --coverage-html coverage",
        "phpcs": "phpcs",
        "phpcbf": "phpcbf",
        "check-cs": "@phpcs",
        "fix-cs": "@phpcbf"
    },
    "config": {
        "allow-plugins": {
            "dealerdirect/phpcodesniffer-composer-installer": true
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
