        <const name="WP_ROOT_DIR" value="C:\Users\ratte\Local Sites\ck-testing\app\public"/>
        <const name="WP_PLUGIN_DIR" value="C:\Users\ratte\Local Sites\ck-testing\app\public\wp-content\plugins"/>
